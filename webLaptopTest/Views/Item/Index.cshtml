@model IEnumerable<Item>
@{
    ViewData["Title"] = "List of Item";
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="text-white">
        <a asp-controller="Item" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add</a>
    </div>
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3 d-flex">
            <div class="card mb-4 d-flex flex-column" style="max-width: 500px; height: 100%;">
                <div class="row g-0 flex-grow-1">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-dark">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    }
                                    <a class="text-white float-right"></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <img src="@item.imgUrl" width="100%" alt="@item.Name" />
                        <img src="@item.imgUrl2" width="100%" alt="@item.Name" />
                    </div>
                    <div class="col-md-7 d-flex flex-column">
                        <div class="card-body flex-grow-1">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Price: </b>@item.Price</p>
                            <p class="card-text"><b>Stock: </b>@item.Stock</p>
                            <p class="card-text"><b>Manufacturer: </b>@item.Manufacturer.Name</p>
                            <p class="card-text"><b>Category: </b>@item.Category.Name</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer mt-auto">
                            <p class="card-text">
                                <a class="btn btn-primary float-right text-light" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@item.Id"> <i class="bi bi-cart-plus"></i> Add to Cart</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
